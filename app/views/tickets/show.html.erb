<%= image_tag (@ticket.photo.attached? ? cl_image_path(@ticket.photo.key, crop: :thumb) : asset_path("blank.png")), class: "banner-ticket" %>
<div class="container content-page mt-3">
  <div class="d-flex justify-content-between mb-5">
    <h1><%= @ticket.event_name %></h1>
    <h3>Data: <%= @ticket.event_date %></h3>
  </div>
  <p class="mb-5"><%= @ticket.description %></p>
  <hr class="mb-5">
  <h2 class="mb-3">R$ <%= @ticket.event_price %></h2>
  <div >
    <% if @ticket.user == current_user %>
      <%= link_to 'Editar', edit_ticket_path(@ticket), class: 'btn btn btn-registrar-navbar' %>
      <%= link_to 'Deletar', ticket_path(@ticket), method: :delete, data: {confirm: "Voce tem certeza que quer apagar?"}, class: 'btn btn btn-registrar-navbar' %>
    <% else %>
      <%= link_to 'Comprar ingresso', new_ticket_order_path(@ticket), class: 'btn btn btn-registrar-navbar' %>
    <% end %>
  </div>
</div>
