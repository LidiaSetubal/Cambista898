<div class="container px-5 w-50">
  <h2 class="ml-5 my-5">Vender um ingresso</h2>
  <%= simple_form_for @ticket do |f| %>
    <%= f.input :event_name %>
    <%= f.input :event_price %>
    <%= f.input :event_date %>
    <%= f.button :submit, 'Venda seu ingresso!', class: 'btn btn btn-registrar-navbar w-50' %>
  <% end %>
</div>
